{{#*inline "page"}}
{{stylesheet "/forum.css"}}
<section>
    <h1>Forum Topics</h1>
</section>
<section>
    {{#each categories}}
    <div class="category">
        <div class="categoryinfo">
            <h1><a href="{{http_root}}/forum?fcid={{category.id}}" class="titlelink">{{category.name}}</a></h1>
            <p class="aside">{{category.description}}</p>
        </div>
        <div class="foruminfo aside mediumseparate">
            <div><b>Threads:</b> {{threads_count}}</div>
            {{#if threads.[0]}}
            <div>
                <b><time datetime="{{threads.[0].thread.createDate}}">{{timeago threads.[0].thread.createDate}}</time>:</b> 
                {{threads.[0].thread.name}}
            </div>
            {{/if}}
        </div>
    </div>
    {{#if @last}}
    {{!Rocket's handlebars implementation is very limited, don't have unless or whatever}}
    {{else}}
    <hr>
    {{/if}}
    {{/each}}
</section>
{{/inline}}
{{>layout}}